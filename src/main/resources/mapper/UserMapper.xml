<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.hellomybatis.UserMapper">

    <!-- 定義一對多的 resultMap -->
    <resultMap id="userWithTransactionsMap" type="org.example.hellomybatis.User">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="balance" column="balance"/>
        <collection property="transactions" ofType="org.example.hellomybatis.Transaction">
            <id property="id" column="transaction_id"/>
            <result property="userId" column="user_id"/>
            <result property="amount" column="amount"/>
            <result property="transactionDate" column="transaction_date"/>
            <result property="description" column="description"/>
        </collection>
    </resultMap>

    <!-- 查詢使用者 -->
    <select id="findById" resultType="org.example.hellomybatis.User">
        SELECT *
        FROM users
        WHERE id = #{id}
    </select>

    <!-- 查詢使用者與交易記錄-->
    <select id="findUserWithTransactions" resultMap="userWithTransactionsMap">
        SELECT u.id AS id,
               u.name,
               u.balance,
               t.id AS transaction_id,
               t.user_id,
               t.amount,
               t.transaction_date,
               t.description
        FROM users u
                 LEFT JOIN transactions t ON u.id = t.user_id
        WHERE u.id = #{id}
    </select>

    <!-- 扣除餘額 -->
    <update id="deductBalance" parameterType="map">
        UPDATE users
        SET balance = balance - #{amount}
        WHERE id = #{fromUserId}
          AND balance >= #{amount}
    </update>

    <!-- 增加餘額 -->
    <update id="addBalance" parameterType="map">
        UPDATE users
        SET balance = balance + #{amount}
        WHERE id = #{toUserId}
    </update>
</mapper>