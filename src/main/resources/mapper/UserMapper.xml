<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.hellomybatis.UserMapper">
    <!-- 查詢使用者 -->
    <select id="findById" resultType="org.example.hellomybatis.User">
        SELECT *
        FROM users
        WHERE id = #{id}
    </select>

    <!-- 扣除餘額 -->
    <update id="deductBalance" parameterType="map">
        UPDATE users
        SET balance = balance - #{amount}
        WHERE id = #{fromUserId}
          AND balance >= #{amount}
    </update>

    <!-- 增加餘額 -->
    <update id="addBalance" parameterType="map">
        UPDATE users
        SET balance = balance + #{amount}
        WHERE id = #{toUserId}
    </update>
</mapper>